                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">numero cedula</label>
                                                    <input type="text" value="{{numero_cedula}}" class="form-control" name="numero_cedula" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="numero_cedula">
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">direccion</label>
                                                    <input type="text" value="{{direccion}}" class="form-control" name="direccion" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="direccion">
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">whatsapp</label>
                                                    <input type="text" value="{{whatsapp}}" class="form-control" name="whatsapp" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="whatsapp">
                                                </div>


