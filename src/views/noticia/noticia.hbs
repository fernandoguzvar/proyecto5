<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>noticia</title>
</head>
<body>
    {{#each todoNoticia}}
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{url_img}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{noticia}}</h5>
            </div>
            <tr>
                <td>
                     <td><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal{{id_noticia}}">
                        eliminar
                        </button>
                          <div class="modal fade" id="exampleModal{{id_noticia}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 style="color:red" class="modal-title" id="exampleModalLabel">eliminar</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div style="color:blue;" class="modal-body">
                                    desea eliminar  {{noticia}}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">cerrar</button>
                                    <a href="/noticia/eliminar/{{id_noticia}}" class="btn btn-danger">eliminar</a>
                                </div>
                                </div>
                            </div>
                        </div>
                      

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modificarnoticia{{id_noticia}}">
                        modificar
                        </button>
                        <!-- Modal -->
                        <div class="modal fade" id="modificarnoticia{{id_noticia}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form method="POST" action="/noticia/modificar/{{id_noticia}}">
                                        <div class="modal-header">
                                            <h5 style="color:red" class="modal-title" id="exampleModalLabel">modificar</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div style="color:blue;" class="modal-body">
                                        

                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">noticia</label>
                                                    <input type="text" value="{{noticia}}" class="form-control" name="noticia" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="noticia">
                                                </div>

                                               {{!--  <div class="form-group">
                                                    <label for="exampleInputEmail1">descripcion</label>
                                                    <input type="text" value="{{descripcion}}" class="form-control" name="descripcion" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="descripcion">
                                                </div> --}}

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">cerrar</button>
                                            <button type="submit" class="btn btn-primary">modificar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </td>
            </tr>
        </div>
    {{/each}}
</body>
</html>